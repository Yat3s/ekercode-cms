{
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "lib": ["dom", "es7"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "lib", "es"]
}
